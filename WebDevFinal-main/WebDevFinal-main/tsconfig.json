{
  "compilerOptions": {
    "target": "esnext",                     
    "useDefineForClassFields": true,            
    "module": "node16",                        
    "moduleResolution": "node16",
    "strict": true,                           
    "jsx": "preserve",                           
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,                       
    "lib": ["esnext", "dom"],  
                      

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}